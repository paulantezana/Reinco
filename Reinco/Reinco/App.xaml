<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reinco.App">
	<Application.Resources>

        <ResourceDictionary>
            <!-- Color -->
            <Color x:Key="Color1">#2196F3</Color>
            <Color x:Key="Color2">#43a7f7</Color>
            <Color x:Key="Color3">#283240</Color>
            <Color x:Key="Color4">#8AC22D</Color>
            <Color x:Key="Color5">#FFFFFF</Color>
            <Color x:Key="Gray">#AAAAAA</Color>
            <!-- End Color -->
            
            <!-- Styles -->
            <Style x:Key="BontonPrimario" TargetType="Button" >
                <Setter Property="BackgroundColor" Value="{StaticResource Color4}"/>
                <Setter Property="TextColor" Value="{StaticResource Color5}"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
            <Style x:Key="BtnGuardar" TargetType="Button" >
                <Setter Property="BackgroundColor" Value="{StaticResource Color4}"/>
                <Setter Property="TextColor" Value="{StaticResource Color5}"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
            <Style x:Key="BtnCancelar" TargetType="Button" >
                <Setter Property="BackgroundColor" Value="#BBBBBB"/>
                <Setter Property="TextColor" Value="#555555"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
            <!-- End Styles -->
            
        </ResourceDictionary>

	</Application.Resources>
</Application>